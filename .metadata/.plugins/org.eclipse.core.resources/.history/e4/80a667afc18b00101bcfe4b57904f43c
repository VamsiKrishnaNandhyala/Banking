server:
  port: 9000

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:
        - id: accounts-service-route
          uri: lb://accounts-service
          predicates:
            - Path=/accounts/**
          filters:
            - StripPrefix=1

        - id: loans-service-route
          uri: lb://loans-service
          predicates:
            - Path=/loans/**
          filters:
            - StripPrefix=1

eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka
