server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true   # force lowercase if you want
      routes:
        - id: accounts-service
          uri: lb://ACCOUNTS-SERVICE
          predicates:
            - Path=/accounts/**
          filters:
            - StripPrefix=1   # ðŸ‘ˆ removes "/accounts" before forwarding

        - id: loans-service
          uri: lb://LOANS-SERVICE
          predicates:
            - Path=/loans/**
          filters:
            - StripPrefix=1   # ðŸ‘ˆ removes "/loans" before forwarding

eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka
