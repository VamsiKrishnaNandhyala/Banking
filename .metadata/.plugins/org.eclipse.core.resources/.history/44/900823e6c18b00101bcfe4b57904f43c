server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lower-case-service-id: true   # Forces lowercase service IDs
      routes:
        - id: accounts-service
          uri: lb://accounts-service
          predicates:
            - Path=/accounts/**

        - id: loans-service
          uri: lb://loans-service
          predicates:
            - Path=/loans/**
    
eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
    service-url:
      defaultZone: http://localhost:8761/eureka
